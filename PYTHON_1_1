while True:
    input_names = input("WHAT IS YOUR USERNAME? ")
    
    if input_names in output_names:
        input_passwords = input("WHAT IS YOUR PASSWORD? ")
        if input_passwords in output_passwords:
            print(f"Welcome Mx. {input_names}! What would you like to access? ")
            break
        elif number_of_entries_password <= 1:
            print("Err! Please try again.")
            number_of_entries_password += 1
        elif number_of_entries_password > 1:
            print("You have provided the wrong password consecutively in the span of a few minutes, please try again later.")
            number_of_entries_password += 1
            break

    elif number_of_entries_name <= 1:
        print("Err! Please try again.")
        number_of_entries_name += 1
