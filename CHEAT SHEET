    print("value1)

# CONDITIONAL STATEMENTS
# If, elif, else statements
value1 = 0
if value1 == 0:
    print("information")
elif value1 => 0:
    print("information?")
else:
    print("information.")

# CONDITIONAL STATEMENTS
# AND Logical Operator
if value1 =< 0 and value1 => 0:
    print("information")

# CONDITIONAL STATEMENTS
# OR Logical Operator
if value1 =< 0 or value1 => 0:
    print("information")

# CONDITIONAL STATEMENTS
# NESTED CONDITIONALS
if value1 == 0:
    if value1 == 0:
        print("information")



# WHILE LOOPS
# SIMPLE LOOPS
while True:
    value1 = int(input("information"))
    if value1 == 0:
        break

print("information?")

print("information.")

# WHILE LOOPS
# HELPER VARIABLE
attempts = 0
while True:
    value1 = input("What is the password ")
    attempts += 1

    if value1  == "1":
        correct = True
        break
    elif attempts == 3:
        correct = False
        break

print("Please try again")

if correct:
    print("Correct password")
else:
    print("Please try again after a few minutes")

