#PRINTING
# Empty line
print(\n)
      
# STR
# String type value
value = "10"

# INT
# Integer type value
value = 10

# SYNTAXES / FUNCTIONS
# Remove natural endline
end = ""

# ORDER OF OPERATIONS
# Printing basic mathematics
print(1+1)
print(1-1)
print(1*1)

# ORDER OF OPERATIONS
# Floating value
print(1/1)

# ORDER OF OPERATIONS
# Integer value
print(1//1)
print(1**1)

# ORDER OF OPERATIONS
# Modulo
print(1%1)

# ORDER OF OPERATIONS
# Square root
from math import sqrt
print(sqrt(9))

# IDENTIFIERS
# Length of word
print(len("information"))
# PRINTING
# Strings with variables
print("information, " + value + " information")
print(value + " information")
# OR
value1 = "information"
value2 = "information"
value = value1 + " " + value2
print(value)
# PRINTING
# F-strings with variables
print(f"The information is {value1}")

# ORDER OF OPERATIONS and PRINTING
# Basic mathematics
value1 = 1
value2 = 2
print(value1 + 1)
    # OR
print(value1 + value2)
value3 = value1 + value2

# ORDER OF OPERATIONS and PRINTING
# Basic mathematics with string value and integer value
value1 = "1"
print(int(value1) + 1)

# ORDER OF OPERATIONS and PRINTING
# String and integer value
value1 = 1
value2 = 2
value3 = value1 + value2
print("The information is " + str(value3))
print("If the information is ", value3, "then", value3, "is the information.")

