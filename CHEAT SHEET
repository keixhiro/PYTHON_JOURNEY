# WHILE LOOPS
# HELPER VARIABLE
attempts = 0
while True:
    value1 = input("question")
    attempts += 1

    if value1  == "1":
        correct = True
        break
    elif attempts == 3:
        correct = False
        break
print("Please try again")

if correct:
    print("value1 is 1")
else:
    print("three wrong inputs")

