# INPUT
# Series of input syntaxes to change the same value but with different string values
value = input("information")
value = input("information?")
value = input("information.")

# INPUT
# Series of input syntaxes to change the same value but with different integer values
value1 = 0
value2 = int(input("information"))
value1 = value1 + value2
value2 = int(input("information?"))
value1 = value1 + value2
value2 = int(input("information."))
value1 = value1 + value2
    # OR
value1 = 0
value2 = int(input("information"))
value1 += value2
value2 = int(input("information?"))
value1 += value2
value2 = int(input("information."))
value1 += value2
    # OR
value1 = 0
value1 += int(input("information"))
value1 += int(input("information?"))
value1 += int(input("information."))

