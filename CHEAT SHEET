    print(value1)

# CONDITIONAL STATEMENTS
# If statements, condition
value1 = 0
value2 = value1 < 5
print(value2)
if value2:
    print("value1)

# CONDITIONAL STATEMENTS
# If, elif, else statements
value1 = 0
if value1 == 0:
    print("information")
elif value1 => 0:
    print("information?")
else:
    print("information.")

# CONDITIONAL STATEMENTS
# AND Logical Operator
if value1 =< 0 and value1 => 0:
    print("information")

# CONDITIONAL STATEMENTS
# OR Logical Operator
if value1 =< 0 or value1 => 0:
    print("information")

# CONDITIONAL STATEMENTS
# NESTED CONDITIONALS
if value1 == 0:
    if value1 == 0:
        print("information")





# LOOPS
# SIMPLE LOOPS
while True:
    value1 = int(input("information"))
    if value1 == 0:
        break
        
    print("information?")

print("information.")

