# INPUT
# Series of input syntaxes to change the same value but with different string values
value = input("information")
value = input("information?")
value = input("information.")

# INPUT
# Series of input syntaxes to change the same value but with different integer values
value0 = 0
value1 = int(input("information"))
value0 = value0 + value1
value1 = int(input("information?"))
value0 = value0 + value1
value1 = int(input("information."))
value0 = value0 + value1
    #OR
value0 = 0
value1 = int(input("information"))
value0 += value1
value1 = int(input("information?"))
value0 += value1
value1 = int(input("information."))
value0 += value1
    #OR
value0 = 0
value0 += int(input("information"))
value0 += int(input("information?"))
value0 += int(input("information."))

# INPUT
# Numbers and register as integer  or floating value
value1 = input("information")
value2 = int(value1)
    # OR
input(float(input("information")))

