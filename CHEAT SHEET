value1 = input("information.")

# INPUT
# Adding together different input integer values
value1 = 0
value2 = int(input("information"))
value1 = value1 + value2
value2 = int(input("information?"))
value1 = value1 + value2
value2 = int(input("information."))
value1 = value1 + value2
    # OR
value1 = 0
value2 = int(input("information"))
value1 += value2
value2 = int(input("information?"))
value1 += value2
value2 = int(input("information."))
value1 += value2
    # OR
value1 = 0
value1 += int(input("information"))
value1 += int(input("information?"))
value1 += int(input("information."))

